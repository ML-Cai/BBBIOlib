/dts-v1/;
/plugin/;
 
/ {
   	compatible = "ti,beaglebone", "ti,beaglebone-black";
 
        /* identification */
	part-number = "BBB-EHRPWM0";
	version = "00A0";


	/* state the resources this cape uses */
	exclusive-use =
		/* the pin header uses */
		"P9.22",        /* ehrpwm0A */
		"P9.21",        /* ehrpwm0B */
		"P9.14",	/* ehrpwm1A */
		"P9.16",	/* ehrpwm1B */
		"P8.13",	/* ehrpwm2A */
		"P8.19",	/* ehrpwm2B */
                /* the hardware ip uses */
		"epwmss0",
		"ehrpwm0",
		"epwmss1",
		"ehrpwm1",
		"epwmss2",
		"ehrpwm2";
 
        fragment@0 {
                target = <&am33xx_pinmux>;
                __overlay__ {
                        bbb_ehrpwm0_pins: pinmux_bbb_ehrpwm0_pins {
                                pinctrl-single,pins = <
					0x150 0x3	/* spi0_sclk.ehrpwm0A , OUTPUT_PULLDOWN | MODE3 P9_22*/
					0x154 0x3	/* spi0_d0  .ehrpwm0B , OUTPUT_PULLDOWN | MODE3 P9_21*/
                                >;	
                        };
                        bbb_ehrpwm1_pins: pinmux_bbb_ehrpwm1_pins {
                                pinctrl-single,pins = <
					0x48 0x6       /* gpmc_a2.ehrpwm1A , OUTPUT_PULLDOWN | MODE6 P9_14*/
					0x4C 0x6       /* gpmc_a3.ehrpwm1B , OUTPUT_PULLDOWN | MODE6 P9_16*/
                                >;	
                        };
                        bbb_ehrpwm2_pins: pinmux_bbb_ehrpwm2_pins {
                                pinctrl-single,pins = <
					0x20 0x4       /* gpmc_ad8.ehrpwm2A , OUTPUT_PULLDOWN | MODE4 P8_19*/
					0x24 0x4       /* gpmc_ad9.ehrpwm2B , OUTPUT_PULLDOWN | MODE4 P8_13*/
                                >;	
                        };
                };
        };
 
	fragment@1 {
                target = <&epwmss0>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                };
        };
	fragment@2 {
                target = <&ehrpwm0>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                        pinctrl-0 = <&bbb_ehrpwm0_pins>;
                };
        };
	
	fragment@3 {
                target = <&epwmss1>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                };
        };
	fragment@4 {
                target = <&ehrpwm1>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                        pinctrl-0 = <&bbb_ehrpwm1_pins>;
                };
        };
	fragment@5 {
                target = <&epwmss2>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                };
        };
	fragment@6 {
                target = <&ehrpwm2>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                        pinctrl-0 = <&bbb_ehrpwm2_pins>;
                };
        };
};
